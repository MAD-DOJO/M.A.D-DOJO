{
  "name": "dojo-hardhat-project",
  "version": "1.0.0",
  "description": "A harhdhat project for M.A.D-DOJO with smart contracts and tests",
  "scripts": {
    "test": "npx hardhat test",
    "compile": "npx hardhat compile",
    "coverage": "npx hardhat coverage",
    "launch-node": "npx hardhat node",
